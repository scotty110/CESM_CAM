# Use Ubuntu as the base image
FROM ubuntu:latest

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y \
	ca-certificates && \
    apt-get clean

# Fix SVM Certs
COPY svn-ccsm-cert.crt /usr/local/share/ca-certificates
RUN chmod 644 /usr/local/share/ca-certificates/svn-ccsm-cert.crt
RUN ls -al /usr/local/share/ca-certificates

# Update CA certificates
RUN update-ca-certificates

# Debugging: Print the contents of the CA certificates file
#RUN cat /etc/ssl/certs/ca-certificates.crt | openssl x509 -noout -text
RUN openssl x509 -text -noout -in /etc/ssl/certs/ca-certificates.crt | grep "CN=cgd.ucar.edu"
